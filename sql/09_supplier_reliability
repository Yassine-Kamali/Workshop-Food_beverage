-- 1. Fournisseurs peu fiables
-- Si le score est bas, le risque de défaillance de la chaîne d'approvisionnement est élevé.
SELECT 
    supplier_name,
    product_category,
    reliability_score,
    quality_rating,
    lead_time AS tiempo_entrega_dias
FROM silver.supplier_information_clean
WHERE reliability_score < 0.7 OR quality_rating = 'C'
ORDER BY reliability_score ASC;
